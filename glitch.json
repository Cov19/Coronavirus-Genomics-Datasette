{
  "install": "source install.sh",
  "start": "source start.sh",
  "watch": {
    "install": {
      "include": [
        "\\.csv$",
        "^requirements.txt$",
        "^install.sh$"
      ]
    },
    "restart": {
      "include": [
        "^metadata.json$",
        "^start.sh$"
      ]
    },
    "throttle": 1000
  }
}
